#include <stdlib.h>
#include "binary_trees.h"
/*
 *
 *
 *
 */

void binary_tree_preorder(const binary_tree_t *tree, void (*func)(int))
{
  binary_tree_t *testRight = NULL;
  if(tree != NULL){
    func(tree->n);
    if(tree->left != NULL)
      {
	  binary_tree_preorder(tree->left, func);
      }
    else{
      if (tree->right !=NULL)
	{
	  func(tree->right->n);
	}
      else{
	if (tree->parent !=NULL)
	  {
	    testRight = tree->parent->right;
	    if (testRight == tree)
	      {
		binary_tree_preorder(tree->parent->parent->right, func);
	      }
	    else
	      {
		binary_tree_preorder(tree->parent->right, func);
	      }
	}
      }
    }
  }
}
