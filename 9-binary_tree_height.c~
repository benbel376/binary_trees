#include <stdlib.h>
#include "binary_trees.h"
#include <stdbool.h>
/*
 *
 *
 *
 */

size_t binary_tree_height(const binary_tree_t *tree)
{
  bool check = true;
  int count = 0;
  const binary_tree_t *Nleft = malloc(sizeof(binary_tree_t));
  Nleft = tree;
  const binary_tree_t *Nright = malloc(sizeof(binary_tree_t));
  Nright = tree;
  while(check)
    {
      if(Nleft->left != NULL || Nleft->right != NULL)
	{
	  Nleft = Nleft->left;
	  Nright = Nleft->right;
	  count = count + 1;
	}
      else if (Nright->left !=NULL || Nright->right !=NULL)
	{
	  Nleft = Nright->left;
	  Nright = Nright->right;
	  count = count + 1;
	}
      else
	{
	  check = false;
	}
    }
  return(count);
}
